<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 ">
      <h2><%= @user.name %>さんとのチャット</h2>
      <table class="message table">
        <thaed>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
          </tr>
        </thaed>
        <% @chats.each do |chat| %>
         <% if chat.user_id == current_user.id %>
         <tbody>
           <tr>
             <th>
               <p style="text-align: left;"><%= chat.message %></p>
             </th>
             <th></th>
           </tr>
         <% else %>
           <tr>
             <th></th>
             <th>
               <p style="text-align: right;"><%= chat.message %></p>
             </th>
           </tr>
         </tbody>
         <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat, remote: true do |f| %>
       <%= f.text_field :message, class: "js-form" %>
       <%= f.hidden_field :room_id %>
       <%= f.submit "SEND", class: "btn btn-sm btn-success" %>
      <% end %>

    </div>
  </div>
</div>