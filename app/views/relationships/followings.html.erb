<div class='container'>
  <div class='row'>
    <div class="w-100">
     <h2>Follow Users</h2>
     <table class='table table-hover table-inverse'>
     <% if @users.exists? %>
      <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
       </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
       <tr>
        <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
        <td><%= link_to "Show", user %></td>
       </tr>
       <% end %>
      </tbody>
     <% else %>
      <th>ユーザーはいません</th>
     <% end %>
     </table>
    </div>
  </div>
</div>
